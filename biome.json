{
	"$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
	"files": {
		"ignore": [".next", "node_modules", ".vercel", "out", "public/sw.js"]
	},
	"formatter": {
		"formatWithErrors": true,
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "single",
			"quoteStyle": "single"
		},
		"globals": ["React"]
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	},
	"linter": {
		"rules": {
			"all": true,
			"nursery": {
				"useSortedClasses": {
					"options": {
						"functions": ["clsx"]
					},
					"level": "error"
				}
			},
			"style": {
				"all": true,
				"noParameterProperties": "off"
			}
		}
	}
}
