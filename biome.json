{
	"$schema": "https://biomejs.dev/schemas/2.3.12/schema.json",
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"files": {
		"includes": ["**", "!**/.next", "!**/node_modules", "!**/.vercel", "!**/out", "!**/public/sw.js"]
	},
	"formatter": {
		"formatWithErrors": true,
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "single",
			"quoteStyle": "single"
		},
		"globals": ["React"]
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	},
	"linter": {
		"rules": {
			"nursery": {
				"useSortedClasses": {
					"level": "error",
					"options": {
						"functions": ["clsx"]
					}
				}
			},
			"recommended": true,
			"style": {
				"noParameterProperties": "off"
			}
		}
	}
}
